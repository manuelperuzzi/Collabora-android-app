<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="org.gammf.collabora_android.app.gui.module.CreateModuleFragment">

   <EditText
        android:id="@+id/txtNewModuleContent"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/lblFragmentTitle"/>

    <TextView
        android:id="@+id/lblFragmentTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:text="@string/newmodule_title"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        />

   <TextView
        android:id="@+id/lblInsertModuleContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNewModuleContent"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/insert_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddModule"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/txtNewModuleContent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:srcCompat="@drawable/checkmark48"/>


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/contentnote_icon"
        android:layout_below="@+id/lblFragmentTitle"
        android:layout_alignStart="@+id/txtNewModuleContent"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
